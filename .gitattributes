# Mark node modules and client build outputs as vendored/generated (excluded from language stats)
node_modules/** linguist-vendored
vendor/** linguist-vendored
public/js/** linguist-generated
dist/** linguist-generated
build/** linguist-generated

# If you have a frontend folder with many JS files used only for assets, mark it vendored
assets/** linguist-vendored

# Force your PHP source directories to be counted as PHP
app/** linguist-language=PHP
src/** linguist-language=PHP
public/** linguist-language=PHP
tests/** linguist-language=PHP

# If you want to force the whole repo to PHP (use with caution)
# * linguist-language=PHP
